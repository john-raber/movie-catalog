<%= form_for @movie, html: { id: 'movie_form' } do |m| %>
  <div class="row">
    <div class="col s6">
      <%= m.label :title, 'Title *' %>
      <%= m.text_field :title %>
    </div>
  </div>

  <div class="row">
    <div class="col s6">
      <%= m.label :summary, 'Summary *' %>
      <%= m.text_area :summary, class: 'materialize-textarea' %>
    </div>
  </div>

  <div class="row">
    <div class="col s6">
      <%= m.label :genre, 'Genre *' %>
      <%= m.text_field :genre %>
    </div>
  </div>

  <div class="row">
    <div class="col s6">
      <%= m.label :year, 'Year *' %>
      <%= m.number_field :year %>
    </div>
  </div>

  <div class="row">
    <div class="col s6">
      <%= m.label :link, 'IMDb link' %>
      <%= m.text_field :link %>
    </div>
  </div>

  <%= m.submit :class => 'btn blue darken-2' %>
<% end %>

<br>

<p class='blue-text text-darken-2'>* = required field</p>
